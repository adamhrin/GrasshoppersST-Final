<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grasshoppers.Views.EditPlayerPage"
             xmlns:ViewModels="clr-namespace:Grasshoppers.ViewModels;assembly=Grasshoppers">
   
    <!-- This doesnt have to be here -->
    <ContentPage.BindingContext>
        <ViewModels:PlayersViewModel/>
    </ContentPage.BindingContext>

    <StackLayout Orientation="Vertical"
                 Spacing="18">

        <Label Text="Meno"/>
        <Entry Text="{Binding SelectedPlayer.Name, Mode=TwoWay}" />

        <Label Text="Číslo"/>
        <Entry Text="{Binding SelectedPlayer.Number, Mode=TwoWay}"/>

        <Label Text="E-mail"/>
        <Entry Text="{Binding SelectedPlayer.Email, Mode=TwoWay}"/>

        <Button Text="ULOŽIŤ ZMENY"
                Command="{Binding PutCommand}" />

        <Button Text="VYMAZAŤ HRÁČA"
                Command="{Binding DeleteCommand}" />
        
    </StackLayout>
</ContentPage>